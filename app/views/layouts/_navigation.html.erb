<%= link_to "Todoapp", root_path, :class => 'brand' %>

<span class="pull-right">
  <%= image_tag current_user.picture, size: '50x50' %>  
</span>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%= current_user.name %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
        <li><%= link_to 'Preferences', edit_user_path(current_user) %></li>
        <li><%= link_to 'Logout', signout_path %></li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to 'Login', signin_path %></li>
  <% end %>
</ul>
