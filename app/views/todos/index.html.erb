<h2>Todos</h2>


<table class="table table-striped table-hover">
  <col width="20" />
  <col />
<% @todos.each do |todo| %>
  <tr>
    <td><%= check_box_tag('') %></td>
    <td>
      <strong><%= todo.title %></strong>
      <% if todo.due_at? %>
      <span>(<% I18n.l( todo.due_at.to_date, format: :long ) %>)</span>
      <% end %>
      <% if todo.description.present? %>
      <br><small>simple_format(todo.description)</small>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<a href="#myModal" role="button" class="btn btn-small" data-toggle="modal"><i class="icon-edit"></i> New Todo</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="newTodoModal" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Todo</h3>
  </div>
  
  <%= render 'form' %>
</div>