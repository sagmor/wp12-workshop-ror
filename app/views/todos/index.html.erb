<h1>Listing todos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Description</th>
    <th>Due at</th>
    <th>Done at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.title %></td>
    <td><%= todo.user_id %></td>
    <td><%= todo.description %></td>
    <td><%= todo.due_at %></td>
    <td><%= todo.done_at %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path %>
